{
     "template": {
       "title": "2023 Craft Certificate",
       "category": "certificates",
       "page-size": "400 900"
     },
   
     "defaults": {
       "font-family": "Times New Roman",
       "font-size": "12pt"
     },
   
     "sections": {
       "header1": {
         "font-size": "20pt",
         "location": [50, 360, 400, 30],
         "text": "NCCER Presents"
       },
       "header2": {
         "font-size": "20pt",
         "location": [250, 360, 400, 70],
         "text": "2023 Craft Certificate"
       },
       "name": {
         "font-size": "50pt",
         "font-style": "italic",
         "location": [160 ,280, 400, 110],
         "text": "{{name}}"
       },
   
       "presented-header": {
         "location": "10 190 90 220",
         "text": "Presented On"
       },
       "presented-date": {
         "location": [140 ,130, 120, 250],
         "text": "{{certificate-date}}"
       },
   
       "signature": {
         "location": "300 190 400 250",
         "image": "images/certificates/boyd_signature.png"
       }
     }
   }